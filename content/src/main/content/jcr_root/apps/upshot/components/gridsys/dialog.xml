<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Dialog"
          title="Grid System"
          xtype="dialog">
    <items
            jcr:primaryType="cq:Widget"
            xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                    jcr:primaryType="cq:Panel"
                    title="General">
                <items jcr:primaryType="cq:WidgetCollection">
                    <rows
                            jcr:primaryType="cq:Widget"
                            fieldDescription="Please fill rows count"
                            fieldLabel="Rows"
                            name="./rows"
                            allowDecimals="false"
                            defaultValue="2"
                            minValue="1"
                            xtype="numberfield"/>
                    <cols
                            jcr:primaryType="cq:Widget"
                            fieldDescription="Please fill cols count"
                            fieldLabel="Cols"
                            name="./cols"
                            allowDecimals="false"
                            defaultValue="2"
                            minValue="1"
                            xtype="numberfield"/>
                </items>
            </tab1>

        </items>
    </items>
</jcr:root>
