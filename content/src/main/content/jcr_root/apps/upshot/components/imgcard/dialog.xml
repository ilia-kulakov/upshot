<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Dialog"
          activeTab="{Long}0"
          helpPath="en/cq/current/wcm/default_components.html#Image"
          xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <image
                jcr:primaryType="cq:Widget"
                cropParameter="./imageCrop"
                ddGroups="[media]"
                fileNameParameter="./fileName"
                fileReferenceParameter="./fileReference"
                mapParameter="./imageMap"
                name="./file"
                requestSuffix=".img.png"
                rotateParameter="./imageRotate"
                title="Image"
                xtype="html5smartimage"/>
        <text
                jcr:primaryType="cq:Widget"
                title="Text"
                xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <header
                        jcr:primaryType="cq:Widget"
                        name="./header"
                        xtype="textfield"/>
                <richtext
                        jcr:primaryType="cq:Widget"
                        name="./richtext"
                        xtype="richtext"/>

            </items>
        </text>
        <link
                jcr:primaryType="cq:Widget"
                title="Link"
                xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <link
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Link"
                        name="./link"
                        rootPath="/content/training-site"
                        xtype="pathfield"/>
                <target jcr:primaryType="cq:Widget"
                           activeItem="1"
                           fieldLabel="Target"
                           fieldDescription="Please select where to open the link"
                           name="./target"
                           type="select"
                           xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <blank
                                jcr:primaryType="nt:unstructured"
                                text="Open the link in a new window or tab"
                                value="_blank"/>
                        <self
                                jcr:primaryType="nt:unstructured"
                                text="Open the link in the same frame as it was clicked"
                                value="_self"/>
                        <parent
                                jcr:primaryType="nt:unstructured"
                                text="Open the link in the parent frame"
                                value="_parent"/>
                        <top
                                jcr:primaryType="nt:unstructured"
                                text="Open the link in the full body of the window"
                                value="_top"/>
                    </options>
                </target>
            </items>
        </link>

    </items>
</jcr:root>
